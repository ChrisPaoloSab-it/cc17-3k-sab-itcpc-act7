<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@color/md_theme_surfaceContainer"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/md_theme_tertiaryFixedDim"
                android:padding="15dp"
                android:text="@string/categoriesHeaderText"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/coffeeCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_tertiaryFixed"
                android:padding="5dp"
                android:text="@string/coffee_shops"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/coffeeCategoryImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/md_theme_onTertiaryFixedVariant"
                android:contentDescription="@string/coffee_shop_image"
                android:padding="5dp"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/coffee_city_app" />

            <TextView
                android:id="@+id/kidCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/md_theme_tertiaryFixed"
                android:padding="5dp"
                android:text="@string/kid_friendly_places"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/kidCategoryImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/md_theme_onTertiaryFixedVariant"
                android:contentDescription="@string/kid_friendly_image"
                android:padding="5dp"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/kids_city_app" />

            <TextView
                android:id="@+id/restaurantCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/md_theme_tertiaryFixed"
                android:padding="5dp"
                android:text="@string/restaurants"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/restaurantCategoryImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/md_theme_onTertiaryFixedVariant"
                android:contentDescription="@string/kid_friendly_image"
                android:padding="5dp"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/resto_city_app" />

            <TextView
                android:id="@+id/shoppingCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/md_theme_tertiaryFixed"
                android:padding="5dp"
                android:text="@string/shoppingCenters"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/shoppingCategoryImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/md_theme_onTertiaryFixedVariant"
                android:contentDescription="@string/kid_friendly_image"
                android:padding="5dp"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/shopping_city_app" />

            <TextView
                android:id="@+id/spaCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/md_theme_tertiaryFixed"
                android:padding="5dp"
                android:text="@string/spa"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/spaCategoryImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/md_theme_onTertiaryFixedVariant"
                android:contentDescription="@string/kid_friendly_image"
                android:padding="5dp"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/spa_city_app" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>