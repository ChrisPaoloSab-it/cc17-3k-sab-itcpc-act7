<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spaHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_inversePrimary_highContrast"
        android:padding="20dp"
        android:text="@string/spaDestinationHeader"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kids_scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaHeader">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_surfaceBright"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spa1Image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@color/md_theme_outline_mediumContrast"
                android:contentDescription="@string/spaimage1"
                android:padding="4dp"
                app:srcCompat="@drawable/spadestinationimage" />

            <TextView
                android:id="@+id/spa1Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/spa1"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/spa2Image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@color/md_theme_outline_mediumContrast"
                android:contentDescription="@string/spaimage2"
                android:padding="4dp"
                app:srcCompat="@drawable/spadestinationimage" />

            <TextView
                android:id="@+id/spa2Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/spa2"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/spa3Image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@color/md_theme_outline_mediumContrast"
                android:contentDescription="@string/spaimage3"
                android:padding="4dp"
                app:srcCompat="@drawable/spadestinationimage" />

            <TextView
                android:id="@+id/spa3Text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/spa3"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>